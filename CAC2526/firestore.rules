rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to the "challenges" collection for authenticated users
    match /challenges/{challengeId} {
      allow read: if request.auth != null;
    }

    // Allow read and write access only to the user's own document in the "users" collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}